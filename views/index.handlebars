<h1>Burgers!</h1>

<ul>
    {{#each burgers}} 
        {{#if devoured}}
            <h1>{{burger_name}}</h1>
            <button class="update-burger" data-id="{{this.id}}" data-newdevoured="false">Devoured!</button>
        {{/if}} 
    {{/each}}
</ul>

<h1>Not devoured</h1>

<ul>
    {{#each burgers}} 
        {{#unless devoured}}
            <h1>{{burger_name}}</h1>
            <button class="update-burger" data-id="{{this.id}}" data-newdevoured="true">Devoured!</button>
        {{/unless}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label>
        <br>
        <input type="radio" name="devoured" value="1" checked>Devoured!
        <br>
        <input type="radio" name="devoured" value="0">Not devoured
    </div>

    <button type="submit">Add Burger</button>
</form>